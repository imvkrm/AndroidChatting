<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.vikram.charla.RegisterActivity"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">
    </android.support.design.widget.AppBarLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@drawable/outlinedrawable"
        android:id="@+id/uname"
        android:padding="12dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="#696969"
        android:hint="Name"
        android:textColorHighlight="#696969"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/uemail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/outlinedrawable"
        android:id="@+id/uemail"
        android:padding="12dp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="#696969"
        android:hint="Email"
        android:layout_marginLeft="16dp"
        android:textColorHighlight="#696969"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/upswd"
        android:layout_alignEnd="@+id/uname" />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/upswd"
        android:layout_above="@+id/signup"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif"
        android:textColor="#696969"
        android:textColorHighlight="#696969"
        android:background="@drawable/outlinedrawable"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Password"
        android:padding="12dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signup"
        android:layout_above="@+id/logintxt"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"

        android:textSize="15dp"
        android:background="@color/colorPrimary"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Already have an account?  LOGIN"
        android:id="@+id/logintxt"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/signup"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="center"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/outlinedrawable1m"
        android:orientation="vertical"
        android:layout_below="@+id/view"
        android:layout_centerInParent="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Charla"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"

            android:textSize="35dp"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Let&apos;s Start the Chat"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
    </LinearLayout>


</RelativeLayout>
